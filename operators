#sum and difference
a=int(input("enter a number:"))
b=int(input("enter a number:"))
print(a+b)
print(a-b)

#product and division
a=int(input("enter a number:"))
b=int(input("enter a number:"))
print(a*b)
print(int(a/b))
print(a%b)

#swapping of two numbers
x=int(input("enter a number:"))
y=int(input("enter a number:"))
temp=x
x=y
y=temp
print(x)
print(y)

#swapping without third variable
a=int(input("enter a number:"))
b=int(input("enter a number:"))
a,b=b,a
print(a)
print(b)

#average calculation
a=float(input("enter student marks:"))
b=float(input("enter student marks:"))
c=float(input("enter student marks:"))
d=float(input("enter student marks:"))
e=float(input("enter student marks:"))
sum=(a+b+c+d+e)/5
print("%.2f"%sum)

#alice in wonderland
n=int(input("Enter a number:"))
tot=0
while(n>0):
    dig=n%10
    tot=tot+dig
    n=n//10
print(tot)

#area calculation
s=int(input("enter square side:"))
l=int(input("enter length of a rectangle rectangle:"))
b=int(input("enter breadth of rectangle:"))
r=float(input("enter radius of circle:"))
a=s*s
b=l*b
c=3.14*r*r
print(a)
print(b)
print("%.2f"% c)

#fencing the ground
l=int(input("enter the length of a rectangle:" ))
b=int(input("enter the breadth of a rectangle:"))
a=l*b
p=2*(l+b)
print("Required length is:",p,"m")
print("Required quantity of carpet is:",a,"sqm")

#power of a number
x=int(input("enter the base value:"))
y=int(input("enter power value:"))
print(pow(x,y))

#simple interest
p=int(input("enter the principal amount:"))
t=int(input("enter the period in years:"))
r=float(input("enter the rate of interest:"))
q=(p*t*r)/100
print(q)

#splitting into teams
a=int(input("enter the number of students in the class:"))
b=int(input("enter the number of teams:"))
c=a//b
d=a%b
print("The number of students in each team is",c,"and left out is",d)

#three idiots
x1=int(input("enter the first point:"))
y1=int(input("enter the second point:"))
x2=int(input("enter the third point:"))
y2=int(input("enter the fourth point:"))
d=((x1+x2)/2,(y1+y2)/2)
print("Binoy's house is located at",d)

